{# templates/program/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{{ parent() }}{% endblock %}

{% block body %}

<div class="media">
  <img src="{{ program.poster }}" alt="{{ program.title }} poster">
  <div class="media-body">
    <a class="back" href="{{ path('program_index') }}">Retour à la liste des programmes</a>
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <p>Catégorie : {{ program.category.name }}</p>
    {% for season in seasons %}
      <h2><a href="{{ path('program_season_show', {seasonId: season.id, programId : program.id}) }}">Saison {{ season.number }}</a></h2>
      <p>{{ season.description }}</p>
    {% endfor %}
  </div>
</div>


{% endblock %}
