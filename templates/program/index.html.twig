{% extends "base.html.twig" %}

{% block title %}Séries{{ parent()}}{% endblock %}

{% block header %}
    {% include '_navbar.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Toutes les séries : </h1>
    <div class="programs-block">
        {% for program in programs %}
            <div class="program-block">
                <img src="{{ program.poster }}" alt="{{ program.title }} poster">
                <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                <p>{{ program.summary }}</p>
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}
