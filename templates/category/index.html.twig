{% extends "base.html.twig" %}

{% block title %}Catégories{{ parent()}}{% endblock %}

{% block header %}
    {% include '_navbar.html.twig' %}
{% endblock %}

{% block body %}
    <h1>Toutes les catégories : </h1>
        {% for category in categories %}
            <h2><a href="{{ path('category_show', {'categoryName': category.name})}}">{{ category.name }}</a></h2>
        {% endfor %}

    <a href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}
